@model HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Welcome to Apollo Aesthetics</h1>
                <p class="lead mb-4">Your trusted partner for dental care and aesthetic treatments in Turkey. Experience world-class medical services with our expert team.</p>
                <div class="d-flex gap-3">
                    <a href="@Url.Action("Contact")" class="btn btn-light btn-lg">Book Consultation</a>
                    <a href="@Url.Action("Services")" class="btn btn-outline-light btn-lg">Our Services</a>
                </div>
            </div>
            <div class="col-lg-6">
                <img src="~/images/hero-image.jpg" alt="Apollo Aesthetics Clinic" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services-section py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Our Services</h2>
            <p class="lead text-muted">Comprehensive dental and aesthetic treatments</p>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-tooth fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Dental Implants</h5>
                        <p class="card-text">Advanced dental implant procedures for missing teeth replacement with permanent solutions.</p>
                        <span class="badge bg-primary">$800 - $2,500</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-smile fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Teeth Whitening</h5>
                        <p class="card-text">Professional teeth whitening treatments for a brighter, more confident smile.</p>
                        <span class="badge bg-primary">$200 - $500</span>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="fas fa-cut fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Hair Transplant</h5>
                        <p class="card-text">Advanced hair transplant procedures using FUE technique for natural hair restoration.</p>
                        <span class="badge bg-primary">$2,000 - $8,000</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-center mt-4">
            <a href="@Url.Action("Services")" class="btn btn-primary btn-lg">View All Services</a>
        </div>
    </div>
</section>

<!-- Why Choose Us Section -->
<section class="why-choose-us-section bg-light py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold">Why Choose Apollo Aesthetics?</h2>
        </div>
        <div class="row g-4">
            <div class="col-md-3 text-center">
                <i class="fas fa-user-md fa-3x text-primary mb-3"></i>
                <h5>Expert Doctors</h5>
                <p>Experienced specialists with international certifications</p>
            </div>
            <div class="col-md-3 text-center">
                <i class="fas fa-hospital fa-3x text-primary mb-3"></i>
                <h5>Modern Facility</h5>
                <p>State-of-the-art equipment and sterile environment</p>
            </div>
            <div class="col-md-3 text-center">
                <i class="fas fa-heart fa-3x text-primary mb-3"></i>
                <h5>Patient Care</h5>
                <p>Personalized treatment plans and aftercare support</p>
            </div>
            <div class="col-md-3 text-center">
                <i class="fas fa-dollar-sign fa-3x text-primary mb-3"></i>
                <h5>Affordable Prices</h5>
                <p>High-quality treatments at competitive prices</p>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="stats-section py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-primary">@Model.TotalAppointments+</h3>
                    <p class="lead">Happy Patients</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-primary">10+</h3>
                    <p class="lead">Years Experience</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-primary">3</h3>
                    <p class="lead">Expert Doctors</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-primary">@* @Model.NewConsultations *@</h3>
                    <p class="lead">New Consultations</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section bg-primary text-white py-5">
    <div class="container text-center">
        <h2 class="display-5 fw-bold mb-4">Ready to Transform Your Smile?</h2>
        <p class="lead mb-4">Contact us today for a free consultation and discover how we can help you achieve your aesthetic goals.</p>
        <a href="@Url.Action("Contact")" class="btn btn-light btn-lg">Get Free Consultation</a>
    </div>
</section>

