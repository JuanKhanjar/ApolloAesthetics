@using ApolloAesthetics.Web.Models.Account
@model ProfileViewModel

@{

    ViewData["Title"] = "Profile";
}

<div class="profile-container" style="max-width:600px;margin:0 auto;background:#fff;border-radius:8px;padding:20px;box-shadow:0 2px 8px rgba(0,0,0,0.1);">
    <h2 style="text-align:center;margin-bottom:20px;">Account Profile</h2>

    <div class="profile-item" style="margin-bottom:15px;">
        <label for="fullName"><strong>Full Name</strong></label>
        <input type="text" id="fullName" name="FullName" value="@Model.FirstName" class="form-control" />
    </div>

    <div class="profile-item" style="margin-bottom:15px;">
        <label for="email"><strong>Email</strong></label>
        <input type="email" id="email" name="Email" value="@Model.Email" class="form-control" />
    </div>

    <div class="profile-item" style="margin-bottom:15px;">
        <label for="phone"><strong>Phone</strong></label>
        <input type="tel" id="phone" name="Phone" value="@Model.PhoneNumber" class="form-control" />
    </div>

    <div class="profile-item" style="margin-bottom:15px;">
        <label for="address"><strong>Address</strong></label>
        <input type="text" id="address" name="Address" value="@Model.LastName" class="form-control" />
    </div>

    <div style="text-align:center;">
        <button type="submit" class="btn btn-primary">Update Profile</button>
    </div>
</div>


